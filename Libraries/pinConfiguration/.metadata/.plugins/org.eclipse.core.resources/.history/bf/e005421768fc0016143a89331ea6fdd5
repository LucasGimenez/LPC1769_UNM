#ifdef __USE_CMSIS
#include "LPC17xx.h"
#endif


int main(void) {

	LPC_GPIO0-> FIODIR |= (1<<22);

    while(1) {

    LPC_GPIO0-> FIOSET = (1<<22);
    LPC_GPIO0-> FIOCLR = (1<<22);

    }

    return 0 ;
}
